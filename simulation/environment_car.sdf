<?xml version="1.0" ?>
<sdf version="1.8">
    <world name="lane_world">
        <physics name="1ms" type="ignored">
            <max_step_size>0.001</max_step_size>
            <real_time_factor>1.0</real_time_factor>
        </physics>

        <plugin filename="libignition-gazebo-physics-system.so" name="ignition::gazebo::systems::Physics"></plugin>
        <plugin filename="libignition-gazebo-user-commands-system.so" name="ignition::gazebo::systems::UserCommands"></plugin>
        <plugin filename="libignition-gazebo-scene-broadcaster-system.so" name="ignition::gazebo::systems::SceneBroadcaster"></plugin>
        <plugin filename="libignition-gazebo-sensors-system.so" name="ignition::gazebo::systems::Sensors">
            <render_engine>ogre2</render_engine>
        </plugin>

        <scene>
            <ambient>0.8 0.8 0.8 1.0</ambient>
            <background>0.5 0.7 0.9 1.0</background>
            <shadows>true</shadows>
        </scene>

        <light type="directional" name="sun">
            <cast_shadows>true</cast_shadows>
            <pose>0 0 10 0 0 0</pose>
            <diffuse>1.0 1.0 1.0 1</diffuse>
            <specular>0.2 0.2 0.2 1</specular>
            <direction>-0.5 0.1 -0.9</direction>
        </light>

        <model name="road_system">
            <static>true</static>
            <pose>20 0 -0.1 0 0 0</pose>
            <link name="road_base">
                <collision name="collision">
                    <geometry>
                        <box>
                            <size>100 8 0.2</size>
                        </box>
                    </geometry>
                </collision>
                <visual name="visual">
                    <geometry>
                        <box>
                            <size>100 8 0.2</size>
                        </box>
                    </geometry>
                    <material>
                        <ambient>0.3 0.3 0.3 1</ambient>
                        <diffuse>0.3 0.3 0.3 1</diffuse>
                    </material>
                </visual>
            </link>
            <link name="center_line">
                <pose>0 0 0.11 0 0 0</pose>
                <visual name="visual">
                    <geometry>
                        <box>
                            <size>100 0.2 0.01</size>
                        </box>
                    </geometry>
                    <material>
                        <ambient>1 1 1 1</ambient>
                        <diffuse>1 1 1 1</diffuse>
                    </material>
                </visual>
            </link>
        </model>

        <model name="vehicle">
            <pose>0 -2.0 0.3 0 0 0</pose>
            <link name="chassis">
                <inertial>
                    <mass>10.0</mass>
                    <inertia>
                        <ixx>0.5</ixx>
                        <ixy>0</ixy>
                        <ixz>0</ixz>
                        <iyy>0.5</iyy>
                        <iyz>0</iyz>
                        <izz>0.5</izz>
                    </inertia>
                </inertial>
                <collision name="collision">
                    <geometry>
                        <box>
                            <size>1.0 0.5 0.2</size>
                        </box>
                    </geometry>
                </collision>
                <visual name="visual">
                    <geometry>
                        <box>
                            <size>1.0 0.5 0.2</size>
                        </box>
                    </geometry>
                    <material>
                        <ambient>0 0 1 1</ambient>
                    </material>
                </visual>
            </link>

            <link name="left_wheel">
                <pose>0.3 0.3 -0.125 -1.5707 0 0</pose>
                <collision name="c">
                    <geometry>
                        <cylinder>
                            <radius>0.2</radius>
                            <length>0.1</length>
                        </cylinder>
                    </geometry>
                    <surface>
                        <friction>
                            <ode>
                                <mu>1.0</mu>
                                <mu2>1.0</mu2>
                            </ode>
                        </friction>
                    </surface>
                </collision>
                <visual name="v">
                    <geometry>
                        <cylinder>
                            <radius>0.2</radius>
                            <length>0.1</length>
                        </cylinder>
                    </geometry>
                    <material>
                        <ambient>0 0 0 1</ambient>
                    </material>
                </visual>
            </link>
            <link name="right_wheel">
                <pose>0.3 -0.3 -0.125 -1.5707 0 0</pose>
                <collision name="c">
                    <geometry>
                        <cylinder>
                            <radius>0.2</radius>
                            <length>0.1</length>
                        </cylinder>
                    </geometry>
                    <surface>
                        <friction>
                            <ode>
                                <mu>1.0</mu>
                                <mu2>1.0</mu2>
                            </ode>
                        </friction>
                    </surface>
                </collision>
                <visual name="v">
                    <geometry>
                        <cylinder>
                            <radius>0.2</radius>
                            <length>0.1</length>
                        </cylinder>
                    </geometry>
                    <material>
                        <ambient>0 0 0 1</ambient>
                    </material>
                </visual>
            </link>
            <link name="caster">
                <pose>-0.3 0 -0.125 0 0 0</pose>
                <collision name="c">
                    <geometry>
                        <sphere>
                            <radius>0.2</radius>
                        </sphere>
                    </geometry>
                    <surface>
                        <friction>
                            <ode>
                                <mu>0.01</mu>
                                <mu2>0.01</mu2>
                            </ode>
                        </friction>
                    </surface>
                </collision>
                <visual name="v">
                    <geometry>
                        <sphere>
                            <radius>0.2</radius>
                        </sphere>
                    </geometry>
                    <material>
                        <ambient>0 0 0 1</ambient>
                    </material>
                </visual>
            </link>
            <joint name="left_wheel_joint" type="revolute">
                <parent>chassis</parent>
                <child>left_wheel</child>
                <axis>
                    <xyz>0 0 1</xyz>
                </axis>
            </joint>
            <joint name="right_wheel_joint" type="revolute">
                <parent>chassis</parent>
                <child>right_wheel</child>
                <axis>
                    <xyz>0 0 1</xyz>
                </axis>
            </joint>
            <joint name="caster_joint" type="fixed">
                <parent>chassis</parent>
                <child>caster</child>
            </joint>

            <link name="lidar_link">
                <pose>0.5 0 0.15 0 0 0</pose>
                <visual name="visual">
                    <geometry>
                        <cylinder>
                            <radius>0.05</radius>
                            <length>0.1</length>
                        </cylinder>
                    </geometry>
                </visual>
                <sensor name='gpu_lidar' type='gpu_lidar'>
                    <pose>0 0 0 0 0 0</pose>
                    <topic>scan</topic>
                    <update_rate>20</update_rate>
                    <ray>
                        <scan>
                            <horizontal>
                                <samples>180</samples>
                                <resolution>1</resolution>
                                <min_angle>-1.0</min_angle>
                                <max_angle>1.0</max_angle>
                            </horizontal>
                        </scan>
                        <range>
                            <min>0.3</min>
                            <max>15.0</max>
                        </range>
                    </ray>
                    <always_on>1</always_on>
                    <visualize>true</visualize>
                </sensor>
            </link>
            <joint name="lidar_joint" type="fixed">
                <parent>chassis</parent>
                <child>lidar_link</child>
            </joint>

            <link name="cliff_left_link">
                <pose>0.5 0.4 0.15 0 1.57 0</pose>
                <visual name="v">
                    <geometry>
                        <box>
                            <size>0.05 0.05 0.05</size>
                        </box>
                    </geometry>
                    <material>
                        <ambient>1 1 0 1</ambient>
                    </material>
                </visual>
                <sensor name='cliff_left' type='gpu_lidar'>
                    <topic>cliff_left</topic>
                    <update_rate>20</update_rate>
                    <ray>
                        <scan>
                            <horizontal>
                                <samples>1</samples>
                                <resolution>1</resolution>
                                <min_angle>0</min_angle>
                                <max_angle>0</max_angle>
                            </horizontal>
                        </scan>
                        <range>
                            <min>0.05</min>
                            <max>2.0</max>
                        </range>
                    </ray>
                    <always_on>1</always_on>
                    <visualize>true</visualize>
                </sensor>
            </link>
            <joint name="cliff_left_joint" type="fixed">
                <parent>chassis</parent>
                <child>cliff_left_link</child>
            </joint>

            <link name="cliff_right_link">
                <pose>0.5 -0.4 0.15 0 1.57 0</pose>
                <visual name="v">
                    <geometry>
                        <box>
                            <size>0.05 0.05 0.05</size>
                        </box>
                    </geometry>
                    <material>
                        <ambient>1 1 0 1</ambient>
                    </material>
                </visual>
                <sensor name='cliff_right' type='gpu_lidar'>
                    <topic>cliff_right</topic>
                    <update_rate>20</update_rate>
                    <ray>
                        <scan>
                            <horizontal>
                                <samples>1</samples>
                                <resolution>1</resolution>
                                <min_angle>0</min_angle>
                                <max_angle>0</max_angle>
                            </horizontal>
                        </scan>
                        <range>
                            <min>0.05</min>
                            <max>2.0</max>
                        </range>
                    </ray>
                    <always_on>1</always_on>
                    <visualize>true</visualize>
                </sensor>
            </link>
            <joint name="cliff_right_joint" type="fixed">
                <parent>chassis</parent>
                <child>cliff_right_link</child>
            </joint>

            <plugin filename="libignition-gazebo-diff-drive-system.so" name="ignition::gazebo::systems::DiffDrive">
                <left_joint>left_wheel_joint</left_joint>
                <right_joint>right_wheel_joint</right_joint>
                <wheel_separation>0.6</wheel_separation>
                <wheel_diameter>0.4</wheel_diameter>
                <topic>cmd_vel</topic>
                <odom_topic>odom</odom_topic>
                <frame_id>odom</frame_id>
                <child_frame_id>chassis</child_frame_id>
            </plugin>
        </model>

        <model name="obstacle_1">
            <pose>10 -2.0 0.5 0 0 0</pose>
            <static>true</static>
            <link name="link">
                <visual name="v">
                    <geometry>
                        <box>
                            <size>1 1 1</size>
                        </box>
                    </geometry>
                    <material>
                        <ambient>1 0 0 1</ambient>
                    </material>
                </visual>
                <collision name="c">
                    <geometry>
                        <box>
                            <size>1 1 1</size>
                        </box>
                    </geometry>
                </collision>
            </link>
        </model>
        <model name="obstacle_2">
            <pose>35 2.0 0.5 0 0 0</pose>
            <static>true</static>
            <link name="link">
                <visual name="v">
                    <geometry>
                        <box>
                            <size>1 1 1</size>
                        </box>
                    </geometry>
                    <material>
                        <ambient>1 0 0 1</ambient>
                    </material>
                </visual>
                <collision name="c">
                    <geometry>
                        <box>
                            <size>1 1 1</size>
                        </box>
                    </geometry>
                </collision>
            </link>
        </model>
    </world>
</sdf>